{
  "name": "ecommerce-website",
  "version": "1.0.0",
  "description": "E-commerce website with Next.js frontend and Node.js backend",
  "scripts": {
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:frontend": "cd frontend && npm run build",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muhammedrifadkp/ecommerce-website.git"
  },
  "keywords": [
    "ecommerce",
    "nextjs",
    "nodejs",
    "mongodb"
  ],
  "author": "Muhammed Rifad KP",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/muhammedrifadkp/ecommerce-website/issues"
  },
  "homepage": "https://github.com/muhammedrifadkp/ecommerce-website#readme",
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
